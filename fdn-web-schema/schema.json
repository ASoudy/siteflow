{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Siteflow Export Schema",
    "description": "Schema for JSON data exported by Siteflow Capture extension",
    "type": "object",
    "required": [
        "type",
        "name",
        "width",
        "height"
    ],
    "properties": {
        "type": {
            "type": "string",
            "enum": [
                "FRAME",
                "RECTANGLE",
                "TEXT",
                "GROUP",
                "VECTOR"
            ]
        },
        "name": {
            "type": "string"
        },
        "x": {
            "type": "number"
        },
        "y": {
            "type": "number"
        },
        "width": {
            "type": "number"
        },
        "height": {
            "type": "number"
        },
        "fills": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/fill"
            }
        },
        "children": {
            "type": "array",
            "items": {
                "$ref": "#"
            }
        },
        "characters": {
            "type": "string"
        },
        "fontSize": {
            "type": "number"
        },
        "svgContent": {
            "type": "string"
        },
        "textAutoResize": {
            "type": "string",
            "enum": [
                "NONE",
                "WIDTH_AND_HEIGHT",
                "HEIGHT"
            ]
        }
    },
    "definitions": {
        "fill": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "SOLID",
                        "GRADIENT_LINEAR"
                    ]
                },
                "color": {
                    "type": "object",
                    "properties": {
                        "r": {
                            "type": "number"
                        },
                        "g": {
                            "type": "number"
                        },
                        "b": {
                            "type": "number"
                        },
                        "a": {
                            "type": "number"
                        }
                    }
                }
            }
        }
    }
}