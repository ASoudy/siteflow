{
    "manifest_version": 3,
    "name": "Siteflow Capture",
    "version": "1.0",
    "description": "Export any webpage to JSON for Figma import",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Export to Figma"
    }
}